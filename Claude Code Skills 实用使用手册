# ç¡®ä¿æ‰€æœ‰ references éƒ½è¢«å¼•ç”¨
for ref in skills/*/references/*.md; do
  skill=$(dirname $(dirname $ref))
  if ! grep -q "references/$(basename $ref)" "$skill/SKILL.md"; then
    echo "Warning: $(basename $ref) not referenced in SKILL.md"
  fi
done
